<%= simple_form_for @usuario, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :nome %>
  <%= error_span(@usuario[:nome]) %>
  <%= f.input :email %>
  <%= error_span(@usuario[:email]) %>
  <%= f.input :sexo %>
  <%= error_span(@usuario[:sexo]) %>
  <%= f.input :dtnascimento %>
  <%= error_span(@usuario[:dtnascimento]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                usuarios_path, :class => 'btn btn-default' %>
<% end %>
