<%= simple_form_for @evento, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :descricao %>
  <%= error_span(@evento[:descricao]) %>
  <%= f.input :tipo %>
  <%= error_span(@evento[:tipo]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                eventos_path, :class => 'btn btn-default' %>
<% end %>
