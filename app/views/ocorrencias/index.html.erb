<%- model_class = Ocorrencia -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:usuario_id) %></th>
      <th><%= model_class.human_attribute_name(:evento_id) %></th>
      <th><%= model_class.human_attribute_name(:datainicio) %></th>
      <th><%= model_class.human_attribute_name(:datatermino) %></th>
      <th><%= model_class.human_attribute_name(:latitude) %></th>
      <th><%= model_class.human_attribute_name(:longitude) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @ocorrencias.each do |ocorrencia| %>
      <tr>
        <td><%= link_to ocorrencia.id, ocorrencia_path(ocorrencia) %></td>
        <td><%= ocorrencia.usuario_id %></td>
        <td><%= ocorrencia.evento_id %></td>
        <td><%= ocorrencia.datainicio %></td>
        <td><%= ocorrencia.datatermino %></td>
        <td><%= ocorrencia.latitude %></td>
        <td><%= ocorrencia.longitude %></td>
        <td><%=l ocorrencia.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_ocorrencia_path(ocorrencia), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      ocorrencia_path(ocorrencia),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_ocorrencia_path,
            :class => 'btn btn-primary' %>
